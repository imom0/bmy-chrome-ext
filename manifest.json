{
	"name": "bmy-chrome-ext",
	"manifest_version": 2,
	"version": "0.9.2",
	"description": "A chrome extension for BMY bbs",
	"options_page": "options.html",
	"permissions": [
		"notifications", "http://202.117.1.8/", "http://bbs.xjtu.edu.cn/", "http://bbs.xjtu6.edu.cn/"
	],
	"content_scripts": [
		{
			"matches": [ "http://202.117.1.8/*/bbstcon*", "http://bbs.xjtu.edu.cn/*/bbstcon*", "http://bbs.xjtu6.edu.cn/*/bbstcon*"],
			"js": ["filter.js"],
			"all_frames": true,
			"run_at": "document_end"
		},
		{
			"matches": [ "http://202.117.1.8/*/bbssbs*", "http://bbs.xjtu.edu.cn/*/bbssbs*", "http://bbs.xjtu6.edu.cn/*/bbssbs*"],
			"js": ["autoredirect.js"],
			"all_frames": true,
			"run_at": "document_end"
		},
		{
			"js": ["jquery-1.10.2.min.js", "notify.js"],
			"matches": [ "http://202.117.1.8/*", "http://bbs.xjtu.edu.cn/*", "http://bbs.xjtu6.edu.cn/*"]
		}
	],
	"background": {
		"scripts": ["notify.js"]
	},
	"web_accessible_resources": [
		"img/notify.png"
	]
}
